                                .checkbox-with-text.active
                                    span.filter__decor
                                    span.filter__text Bikes
                            li.filter-item
                                .checkbox-with-text
                                    span.filter__decor
                                    span.filter__text Electric Bikes
                .filter-box.filter-box__size
                    .filter-box__title Wheel size
                    .filter-categoty__data
                        ul.filter__list
