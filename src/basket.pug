extends pug/layout/main
block variables_layout
    -
        let title = 'catalog'
        let curPage = '/basket';

block content
    main.main.basket
        .container
            .basket__content
                .basket__wrapper-btn
                    <button class="btn-default">Remove all</button>
                .basket__cards 
                    .basket__card
                        .basket__card-img
                            img(src=require(`./assets/img/catalog/1.png`) class="img-full" alt='???')
                        .basket__card-content
                            .basket__card-name 
                                a(href="#") Merida Big Seven 10MD Hardtail Mountain Bike Race Red/White
                            .basket__card-control
                                .basket__card-delete
                                .basket__card-number
                                    .number__minus
                                    .number__value 1
                                    .number__plus
                            .basket__card-price
                                .price__current $ 3 447
                                .price__old $ 5 324

            aside.basket__aside
                .basket__promo-code
                    .form__field
                        input(type="text" placeholder="promo code")
                    .form__button
                        button.btn-default Apply
                .basket__total
                    .basket__total-info
                        .basket__total-text Total cost
                        .basket__total-price $ 3 447
                    .form__button
                        button.btn-default Place an order





            

